<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<main>
  <div class="container">
    <div class="row">
      <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>

        <form class="form" method="POST">
          <div class="form-group">
            <label for="nameTextField">Name</label>
            <input
              type="text"
              class="form-control"
              id="nameTextField"
              name="name"
              required
            />
          </div>

          <div class="form-group">
            <label for="contactNumberTextField">Contact Number</label>
            <input
              type="text"
              class="form-control"
              id="contactNumberTextField"
              name="contactNumber"
              required
            />
          </div>
          <div class="form-group">
            <label for="emailTextField">Email</label>
            <input
              type="text"
              class="form-control"
              id="emailTextField"
              name="email"
              required
            />
          </div>

          <button class="btn btn-primary" type="submit">
            <i class="fas fa-edit"></i> Submit
          </button>

          <a href="/contact-list" class="btn btn-warning">
            <i class="fas fa-undo"></i> Cancel</a
          >
        </form>
      </div>
    </div>
  </div>
</main>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
