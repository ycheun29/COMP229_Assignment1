<%- include ../partials/header.ejs %> <%- include ../partials/main_bar.ejs %>

<main class="content">
  <div>
    <div class="row">
      <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>

        <form class="form" method="POST">
          <div class="form-group">
            <label for="nameTextField">Contact Name</label>
            <input
              type="text"
              class="form-control"
              id="nameTextField"
              name="name"
              value="<%= contact.name %>"
              required
            />
          </div>

          <div class="form-group">
            <label for="contactNumberTextField">Contact Number</label>
            <input
              type="text"
              class="form-control"
              id="contactNumberTextField"
              name="contactNumber"
              value="<%= contact.contactNumber %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="emailTextField">Email</label>
            <input
              type="text"
              class="form-control"
              id="emailTextField"
              name="email"
              value="<%= contact.email %>"
              required
            />
          </div>

          <div class="row">
            <div class="col-md-6">
              <button class="btn btn-primary btn-lg" type="submit">
                <i class="fa-sharp fa-solid fa-pen-to-square"></i> Submit
              </button>
            </div>
            <div class="col-md-6 text-right">
              <a href="/contact-list" class="btn btn-warning btn-lg">
                <i class="fas fa-undo"></i> Cancel</a
              >
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>

<%- include ../partials/bottom_bar.ejs %> <%- include ../partials/footer.ejs %>
