<%- include ../partials/header.ejs %> <%- include ../partials/main_bar.ejs %>

<main class="content">
  <div class="row">
    <div class="offset-md-2 col-md-5">
      <h1>Login Account</h1>
      <br />
      <form method="POST" autocomplete="off">
        <fieldset class="form-group">
          <label for="username">Username: </label>
          <input
            type="text"
            class="form-control"
            name="username"
            id="username"
            required
          />
        </fieldset>

        <fieldset class="form-group">
          <label for="password">Password: </label>
          <input
            type="password"
            class="form-control"
            name="password"
            id="password"
            required
          />
        </fieldset>
        <div class="row">
          <div class="col-md-6">
            <button class="btn btn-primary btn-lg" type="submit">
              <i class="fa-sharp fa-solid fa-lock"></i> Login
            </button>
          </div>
          <div class="col-md-6 text-right">
            <a href="/register" class="btn btn-success btn-lg">
              <i class="fa-solid fa-user-plus"></i> Register</a
            >
          </div>
        </div>

        <!-- Message Area -->
        <% if(messages.length > 0) {%>
        <div class="alert alert-danger" role="alert"><%= messages %></div>
        <% } %>
      </form>
    </div>
  </div>
</main>

<%- include ../partials/bottom_bar.ejs %> <%- include ../partials/footer.ejs %>
